@keyframes logo-ani{
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(360deg);
    }
}
.logo {
    margin-right: 10px;
	width: 34px;
	height: 20px;
	background: color-link;
    position: relative;
    top: -2px;
    vertical-align: middle;
    &:before, &:after{
        content: '';
        position: absolute;
        left: 0;
        width: 0;
        height: 0;
        border-left: 17px solid transparent;
        border-right: 17px solid transparent;
    }
    &:before{
        top: -10px;
        border-bottom: 10px solid color-link;
    }
    &:after{
        bottom: -10px;
        border-top: 10px solid color-link;
    }
}

#container
    position: relative
    & > .outer
        margin-bottom: 30px

#main
    @media mq-normal
        column(main-column)
    @media mq-tablet
        if sidebar
            column(main-column-tablet)
        else
            width: 100%
    @media mq-mobile
        width: 100%
    @media mq-mini
        width: 100%

