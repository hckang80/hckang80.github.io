#footer
    padding: 20px 0
    border-top: 1px solid color-border
    color: color-default
    font-size: font-size + 2
    text-align: center
    .outer
        margin-bottom: 0
    a
        color: color-link
        text-decoration: none
        &:hover
            text-decoration: underline

#footer-info
    line-height: line-height
    font-size: 0.85em

.color-important
    color:#f03e3e

a[target="_blank"]
    &::after
        content: ''
        display: inline-block
        width: 12px
        height: 12px
        margin-left: 2px
        background: url('/css/images/icon-new-window.svg') no-repeat 0 0/100%
